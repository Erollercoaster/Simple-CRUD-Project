<div class="table_container">
  <div class="table_wrapper">
    <h1>Workouts</h1>
    <div id="new">
    <%= link_to new_workout_path, class: 'button-green' do %>
  <i class="fas fa-plus"></i>
<% end %>
    </div>
    <table class="table-element">
      <thead>
        <tr>
          <th>Exercise Name</th>
          <th>Sets</th>
          <th>Reps</th>
          <th>Weight(kg)</th>
          <th>Date</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @workouts.each do |workout| %>
          <tr>
            <td><%= workout.exercise_name %></td>
            <td><%= workout.sets %></td>
            <td><%= workout.reps %></td>
            <td><%= workout.weight %></td>
            <td><%= workout.date %></td>
           <td>
  <%= button_to workout_path(workout), class: 'btn action-button btn-primary', method: :get do %>
    <span><i class="fas fa-eye"></i></span>
  <% end %>
</td>
<td>
  <%= button_to edit_workout_path(workout), class: 'btn action-button btn-warning', method: :get do %>
    <span><i class="fas fa-edit"></i></span>
  <% end %>
</td>
<td>
  <%= button_to workout_path(workout), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn action-button btn-danger', 'data-turbo-method': :delete, 'data-turbo-confirm': "Are you sure?" do %>
    <span><i class="fas fa-trash-alt"></i></span>
  <% end %>
</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    
  </div>
</div>
